{
	"name": "codepal",
	"displayName": "CodePal",
	"description": "A VS Code extension to access information of codeforces directly from VSC.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codepal.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "codepal.fetchContests",
				"title": "Fetch Contests"
			},
			{
				"command": "codepal.createContestDirectories",
				"title": "Create Contest Folder",
				"icon": "res/svg/CreateFolder.png"
			},
			{
				"command": "codepal.createProblemFolder",
				"title": "Create Problem Folder",
				"icon": "res/svg/CreateFolder.png"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "codepal",
					"title": "CodePal",
					"icon": "res/svg/icon.svg"
				}
			]
		},
		"views": {
			"codepal": [
				{
					"id": "codepalContests",
					"name": "Contests",
					"icon": "res/svg/icon.svg",
					"contextualTitle": "Contests",
					"visibility": "collapsed"
				},
				{
					"id": "codepalProblems",
					"name": "Problems",
					"icon": "res/svg/icon.svg",
					"contextualTitle": "Problems",
					"visibility": "collapsed"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "codepal.fetchContests",
					"when": "view == codepalContests",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "codepal.createContestDirectories",
					"when": "view == codepalContests && viewItem==contest",
					"group": "inline"
				},
				{
					"command": "codepal.createProblemFolder",
					"when": "view == codepalProblems && viewItem==problem",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cheerio": "^0.22.23",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/node-fetch": "^2.5.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.11",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"cheerio": "^1.0.0-rc.5",
		"node-fetch": "^2.6.1"
	}
}
